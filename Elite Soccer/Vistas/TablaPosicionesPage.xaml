<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Elite_Soccer.Vistas.TablaPosicionesPage"
                          xmlns:pancake="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             BackgroundColor="#111111"
             NavigationPage.HasNavigationBar="False">

    <StackLayout Padding="20" Spacing="15">

        <!-- Encabezado -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Image Source="volver.png"
                   HeightRequest="30"
                   WidthRequest="30"
                   Grid.Column="0">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Volver_Clicked"/>
                </Image.GestureRecognizers>
            </Image>

            <Label Text="Tabla de Posiciones"
                   FontSize="22"
                   TextColor="Gold"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Grid.Column="1"/>
        </Grid>

        <!-- Selector de categoría -->
        <Grid ColumnDefinitions="*,*" Margin="0,10,0,0">
            <Button x:Name="btnVaronil"
            Text="VARONIL"
            BackgroundColor="#252525"
            TextColor="Gold"
            FontAttributes="Bold"
            CornerRadius="10"
            Clicked="BtnVaronil_Clicked"/>

            <Button x:Name="btnFemenil"
            Text="FEMENIL"
            Grid.Column="1"
            BackgroundColor="#1E1E1E"
            TextColor="White"
            FontAttributes="Bold"
            CornerRadius="10"
            Clicked="BtnFemenil_Clicked"/>
        </Grid>


        <!-- Scroll horizontal de tabla -->
        <ScrollView Orientation="Horizontal">
            <StackLayout>
                <!-- Encabezados -->
                <Grid BackgroundColor="#222222" Padding="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="60"/>
                    </Grid.ColumnDefinitions>

                    <Label Text="POS" TextColor="White" FontSize="12" Grid.Column="0"/>
                    <Label Text="EQUIPO" TextColor="White" FontSize="12" Grid.Column="1"/>
                    <Label Text="JJ" TextColor="White" FontSize="12" Grid.Column="2"/>
                    <Label Text="JG" TextColor="White" FontSize="12" Grid.Column="3"/>
                    <Label Text="JE" TextColor="White" FontSize="12" Grid.Column="4"/>
                    <Label Text="JP" TextColor="White" FontSize="12" Grid.Column="5"/>
                    <Label Text="GF" TextColor="White" FontSize="12" Grid.Column="6"/>
                    <Label Text="GC" TextColor="White" FontSize="12" Grid.Column="7"/>
                    <Label Text="DIF" TextColor="White" FontSize="12" Grid.Column="8"/>
                    <Label Text="PTS" TextColor="Gold" FontSize="12" FontAttributes="Bold" Grid.Column="9"/>
                </Grid>

                <!-- Contenido -->
                <StackLayout x:Name="contenedorPosiciones" Spacing="8" />
            </StackLayout>
            
            
        </ScrollView>
        <StackLayout Padding="20" Spacing="20">

            <!-- Goleadores -->
            <pancake:PancakeView BackgroundColor="#1A1A1A" CornerRadius="20" Padding="15">
                <Grid>
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Tapped="VerGoleadores_Clicked"/>
                    </Grid.GestureRecognizers>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Image Source="icono_goleador.png" HeightRequest="60" WidthRequest="60"/>
                    <StackLayout Grid.Column="1" Padding="10,0" VerticalOptions="Center">
                        <Label Text="Goleadores" FontSize="18" TextColor="White" FontAttributes="Bold"/>
                        <Label Text="Revisa los máximos anotadores" TextColor="Gray" FontSize="14"/>
                    </StackLayout>
                </Grid>
            </pancake:PancakeView>

            
            <!-- Calendario -->
            <pancake:PancakeView BackgroundColor="#1A1A1A" CornerRadius="20" Padding="15">
                <Grid>
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Tapped="VerCalendario_Clicked"/>
                    </Grid.GestureRecognizers>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Image Source="icono_calendario.png" HeightRequest="60" WidthRequest="60"/>
                    <StackLayout Grid.Column="1" Padding="10,0" VerticalOptions="Center">
                        <Label Text="Calendario de partidos" FontSize="18" TextColor="White" FontAttributes="Bold"/>
                        <Label Text="Partidos de esta semana y próximos" TextColor="Gray" FontSize="14"/>
                    </StackLayout>
                </Grid>
            </pancake:PancakeView>

        </StackLayout>
    </StackLayout>
</ContentPage>
