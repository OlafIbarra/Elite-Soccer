<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Elite_Soccer.RegistroUsuario"
             BackgroundColor="#111111"
             NavigationPage.HasNavigationBar="False"
             Title="Registro de Usuario">

    <ScrollView>
        <StackLayout Padding="30" Spacing="20">
            <Label Text="Crear cuenta" FontSize="24" TextColor="Gold" HorizontalOptions="Center"/>

            <Entry x:Name="txtNombre" Placeholder="Nombre completo" TextColor="White" PlaceholderColor="Gray"/>
            <Entry x:Name="txtCorreo" Placeholder="Correo electrónico" Keyboard="Email" TextColor="White" PlaceholderColor="Gray"/>
            <Entry x:Name="txtContrasena" Placeholder="Contraseña" IsPassword="True" TextColor="White" PlaceholderColor="Gray"/>


            <Button Text="Registrarse"
                    BackgroundColor="Gold"
                    TextColor="Black"
                    Clicked="BtnRegistrarse_Clicked"/>

        </StackLayout>
    </ScrollView>
</ContentPage>
