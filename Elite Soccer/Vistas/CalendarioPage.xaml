<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pv="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             x:Class="Elite_Soccer.Vistas.CalendarioPage"
             BackgroundColor="#111111"
             NavigationPage.HasNavigationBar="False">

    <StackLayout Spacing="20" Padding="20">
        <!-- Botón de regreso -->
        <Image Source="volver.png"
               HeightRequest="30"
               WidthRequest="30"
               HorizontalOptions="Start">
            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="Volver_Clicked"/>
            </Image.GestureRecognizers>
        </Image>

        <Label Text="CALENDARIO DE PARTIDOS"
               FontSize="22"
               TextColor="Gold"
               FontAttributes="Bold"
               HorizontalOptions="Center"/>

        <!-- Botones de categoría -->
        <Grid ColumnDefinitions="*,*">
            <Button Text="VARONIL" x:Name="btnVaronil" BackgroundColor="#252525" TextColor="Gold" Clicked="BtnCategoria_Clicked"/>
            <Button Text="FEMENIL" x:Name="btnFemenil" Grid.Column="1" BackgroundColor="#1E1E1E" TextColor="White" Clicked="BtnCategoria_Clicked"/>
        </Grid>

        <!-- Lista de jornadas -->
        <ScrollView>
            <StackLayout x:Name="contenedorJornadas" Spacing="20"/>
        </ScrollView>

    </StackLayout>
</ContentPage>
